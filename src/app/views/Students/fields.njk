<div class="info">
    <div class="item">
        <div>Avatar Url</div>
        <div>
            <input type="url" name="avatar_url" placeholder="http://" value="{{ students.avatar_url }}">
        </div>
    </div>
    <div class="item">
        <div>Nome completo</div>
        <div>
            <input type="text" name="name" placeholder="Nome" value="{{ students.name }}">
        </div>
    </div>
    <div class="item">
        <div>Data de nascimento</div>
        <div>
            <input type="date" name="date" value="{{ students.date }}">
        </div>
    </div>
     <div class="item">
        <div>Email</div>
        <div>
            <input type="email" name="email" value="{{ students.email }}">
        </div>
    </div>
    <div class="item">
        <div>Escolaridade</div>
        <div>
            <select name="grade">
                <option value="5EF" {% if students.grade == "5EF" %}selected{% endif %}>5º Ano do Ensino Fundamental</option>
                <option value="6EF" {% if students.grade == "6EF" %}selected{% endif %}>6º Ano do Ensino Fundamental</option>
                <option value="7EF" {% if students.grade == "7EF" %}selected{% endif %}>7º Ano do Ensino Fundamental</option>
                <option value="8EF" {% if students.grade == "8EF" %}selected{% endif %}>8º Ano do Ensino Fundamental</option>
                <option value="9EF" {% if students.grade == "9EF" %}selected{% endif %}>9º Ano do Ensino Fundamental</option>
                <option value="1EM" {% if students.grade == "1EM" %}selected{% endif %}>1º Ano do Ensino Médio</option>
                <option value="2EM" {% if students.grade == "2EM" %}selected{% endif %}>2º Ano do Ensino Médio</option>
                <option value="3EM" {% if students.grade == "3EM" %}selected{% endif %}>3º Ano do Ensino Médio</option>
            </select>
        </div>
    </div>
    <div class="item">
        <div>Carga Horária</div>
        <div><input type="number" name="charge" placeholder="Digite aqui a sua Carga horária semanal" value="{{ students.charge }}"></div>
    </div>
     <div class="item">
        <div>Professores</div>
        <div>
            <select name="teacher">
                {% for teacher in TeacherOptions %}
                <option value="{{ teacher.id }}" {% if students.teacher_id == teacher.id %}selected{% endif %}>{{ teacher.name }}</option>
                {% endfor %}
            </select>
        </div>
    </div>