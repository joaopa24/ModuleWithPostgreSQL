{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <section class="avatar" style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></section>
        <div class="containes">
            <form class="Teacher" method="POST" action="/Teachers?_method=PUT">
                <h1>Editar</h1>

                {% include "Teachers/fields.njk" %}

                <input type="hidden" name="id" value="{{ teacher.id }}">
                <button type="submit">Salvar</button>
            </form>

            <form class="Delete-form" id="form-delete" method="POST" action="/Teachers?_method=DELETE">
                <input type="hidden" name="id" value="{{ teacher.id }}">
                <button type="submit">Deletar</button>
            </form>
        </div>
    </div>
    {% include "confirm.njk" %}
{% endblock content %}