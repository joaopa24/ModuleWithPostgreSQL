{% extends "layout.njk" %}

{% block content %}
<div class="card table-container">
    <a href="/Teachers/create">Criar</a>
    <table>
      <thead>
        <tr>
            <th>Nome Completo</th>
            <th>Acompanhamento</th>
            <th>Ação</th>
        </tr>
      </thead>
      <tbody>
            {% for teacher in teachers %}
             <tr>
              <td>
                  <span style="background-image: url({{ teacher.avatar_url }})"></span>
                  {{ teacher.name }}
              </td>
              <td>{{ teacher.Info}}</td>
              <td><a href="/Teachers/{{teacher.id}}">Ver</a></td>
             </tr>
            {% endfor %}
      </tbody>
    </table>
</div>
{% endblock content %}