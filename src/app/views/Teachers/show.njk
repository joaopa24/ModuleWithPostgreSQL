{% extends "layout.njk" %}

{% block content %}
<div class="card">
    <section class="avatar" style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover">        
    </section>
    <section class="Teacher">
        <h1>Informações</h1>
       <div class="info">
           <div class="item">
               <div>Nome completo</div>
               <div>{{ teacher.name }}</div>
           </div>
           <div class="item">
               <div>Idade</div>
               <div>{{ teacher.age }}</div>
           </div>
           <div class="item">
               <div>Grau de escolaridade</div>
               <div>{{ teacher.grau }}</div>
           </div>
           <div class="item">  
               <div>Tipo de aula</div>
               <div>{{ teacher.Tipo }}</div>
           </div>
           <div class="item">
               <div>Acompanhamento</div>
               <div>
                   {% for Info in teacher.subjects %}
                   <span>{{ Info }}</span>
                   {% endfor %}
               </div>
           </div>
           <div class="item">  
               <div>Registrado desde</div>
               <div>{{ teacher.create_at }}</div>
           </div>
       </div>
        <a href="/Teachers/{{teacher.id}}/edit" class="button">Editar</a>
    </section>
</div>
{% endblock content %}